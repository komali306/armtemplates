{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "0.0.0.1",
    "parameters": {
        "vnetname": {
            "type": "string",
            "metadata": {
                "description": "name of the vnet"
            },
            "defaultValue": "vnetarm"
        },
        "vnetaddressprefix": {
            "type": "string",
            "metadata": {
                "description": "address prefixes of the vnet"
            },
            "defaultValue" : "10.10.0.0/16"
        },
        "subnetname": {
            "type": "array",
            "metadata": {
                "description": "name of the subnets"
            },
            "defaultValue" : ["web","app", "db"]
        },
        "subnetprefixes": {
            "type": "array",
            "metadata": {
                "description": "address prefixes of the subnet"
            },
            "defaultValue" : ["10.10.0.0/24", "10.10.1.0/24", "10.10.2.0/24"]
        }
    },
    "resources": [
        {
            "name": "vnetarm",
            "type": "Microsoft.Network/virtualNetworks",
            "apiVersion": "2019-11-01",
            "location": "[resourceGroup().location]",
            "tags": {
                "displayName": "[parameters('vnetname')]"
            },
            "properties": {
                "addressSpace": {
                    "addressPrefixes": [
                    "[parameters('vnetaddressprefix')]" 
                    ]                
                },
                "subnets": [
                    {
                        "name": "[parameters('subnetname')[0]]",
                        "properties": {
                            "addressPrefix": "[parameters('subnetprefixes')[0]]"
                        }
                    },
                    {
                        "name": "[parameters('subnetname')[1]]",
                        "properties": {
                            "addressPrefix": "[parameters('subnetprefixes')[1]]"
                        }
                    },
                    {
                        "name": "[parameters('subnetname')[2]]",
                        "properties": {
                            "addressPrefix": "[parameters('subnetprefixes')[2]]"
                        }
                    }
                ]
            }
        }
    ]
}




