{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "0.0.0.1",
    "parameters": {
        "vnetaddressspace": {
            "type": "string",
            "metadata": {
                "description": "address prefixes of the vnet"
            },
            "defaultValue": "10.10.0.0/16"
        },
        "subnetaddressspaces": {
            "type": "array",
            "metadata": {
                "description": "address prefixes of the subnet"
            },
            "defaultValue": ["10.10.0.0/24", "10.10.1.0/24", "10.10.2.0/24"]
        }
    },
    "variables": {
        "vnetname": "vnetarm",
        "location": "[resourceGroup().location]",
        "subnet0": "[concat(variables('vnetname'), '/', 'subnet0')]"
    },
    "resources": [
        {
            "name": "[variables('vnetname')]",
            "type": "Microsoft.Network/virtualNetworks",
            "apiVersion": "2019-11-01",
            "location": "[variables('location')]",
            "tags": {
                "displayName": "[variables('vnetname')]"
            },
            "properties": {
                "addressSpace": {
                    "addressPrefixes": [
                        "[parameters('vnetaddressspace')]"
                    ]                 
                }
            }
        },
        {
            "name": "[concat(variables('vnetname'), '/', 'subnet',copyIndex())]",
            "apiVersion": "2020-07-01",
            "type": "Microsoft.Network/virtualNetworks/subnets",
            "properties": {
                "addressPrefix": "[parameters('subnetaddressspaces')[copyIndex()]]"

            },
            "copy": {
                "name": "subnetCopy",
                "count": "[length(parameters('subnetaddressspaces'))]",
                "mode": "serial"
            },
            "dependsOn": [
                "[resourceId('Microsoft.Network/virtualNetworks', variables('vnetname'))]"
            ]
        },
        {
            "name": "armpub",
            "type": "Microsoft.Network/publicIPAddresses",
            "apiVersion": "2020-07-01",
            "location": "[resourceGroup().location]",
            "sku": {
                "name": "Basic"
            },
            "tags": {
                "displayName": "armpub"
            },
            "properties": {
                "publicIPAllocationMethod": "Dynamic",
                "dnsSettings": {
                    "domainNameLabel": "armpubdns"
                }
            }
        },
        {
            "name": "armnsg",
            "type": "Microsoft.Network/networkSecurityGroups",
            "apiVersion": "2020-07-01",
            "location": "[resourceGroup().location]",
            "properties": {
                "securityRules": [
                    {
                        "name": "nsgarmrule",
                        "properties": {
                            "description": "description",
                            "protocol": "Tcp",
                            "sourcePortRange": "*",
                            "destinationPortRange": "*",
                            "sourceAddressPrefix": "*",
                            "destinationAddressPrefix": "*",
                            "access": "Allow",
                            "priority": 300,
                            "direction": "Inbound"
                        }
                    }
                ]
            }
        },
        {
            "name": "armnic",
            "type": "Microsoft.Network/networkInterfaces",
            "apiVersion": "2020-07-01",
            "location": "[resourceGroup().location]",
            "tags": {
                "displayName": "armnic"
            },
            "dependsOn": [
                "[resourceId('Microsoft.Network/publicIPAddresses', 'armpub')]",
                "[resourceId('Microsoft.Network/networkSecurityGroups', 'armnsg')]"
            ],
            "properties": {
                "ipConfigurations": [
                    {
                        "name": "ipConfig1",
                        "properties": {
                            "privateIPAllocationMethod": "Dynamic",
                            "subnet": {
                                "id": "[resourceId('Microsoft.Network/virtualNetworks/subnets', variables('vnetname'), 'subnet0')]"
                            }
                        }
                    }
                ]
            }
        },
        {
            "name": "vmarm",
            "type": "Microsoft.Compute/virtualMachines",
            "apiVersion": "2020-06-01",
            "location": "[variables('location')]",
            "tags": {
                "displayName": "ubuntu"
            }

        }
        
        

    ]
}
        
    





